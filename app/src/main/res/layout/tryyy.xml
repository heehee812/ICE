<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <Button
        android:id="@+id/button_add_mission"
        android:layout_width="92dp"
        android:layout_height="71dp"
        android:background="#A0DFE2"
        android:text="@string/new_mission"
        android:textColor="#69769B"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.092"
        tools:ignore="MissingConstraints,OnClick" />

    <Button
        android:id="@+id/button_finish"
        android:layout_width="58dp"
        android:layout_height="27dp"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:text="@string/finish"
        android:textColor="#E8EAE1"
        android:textSize="15sp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.314"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.458"
        tools:ignore="MissingConstraints,OnClick" />

    <Button
        android:id="@+id/button_fail"
        android:layout_width="58dp"
        android:layout_height="27dp"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:text="@string/fail"
        android:textColor="#E8EAE1"
        android:textSize="15sp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.669"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.459"
        tools:ignore="MissingConstraints,OnClick" />

    <EditText
        android:id="@+id/edit_wish_papper"
        android:layout_width="188dp"
        android:layout_height="145dp"
        android:width="3dp"
        android:background="#FFFFFF"
        android:gravity="left"
        android:inputType="textMultiLine"
        android:textColor="#A790A5"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.269"
        tools:ignore="LabelFor,MissingConstraints,RtlHardcoded" />

</androidx.constraintlayout.widget.ConstraintLayout>